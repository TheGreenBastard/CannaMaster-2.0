<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Application Settings">

        <EditTextPreference
            android:key="account_name"
            android:title="account_name"
            android:summary="%s"
            android:dialogTitle="@string/calendar_account_title"
            android:inputType="textNoSuggestions|textUri"/>
        <EditTextPreference
            android:key="account_type"
            android:title="Account Type"
            android:summary="%s"
            android:dialogTitle="account_type"
            android:inputType="textNoSuggestions|textUri"/>
        <EditTextPreference
            android:key="owner_account"
            android:title="owner_account"
            android:summary="%s"
            android:dialogTitle="owner_account"
            android:inputType="textNoSuggestions|textUri"/>

        <CheckBoxPreference
            android:key="haptic_feedback"
            android:title="haptic_feedback_preference"
            android:summary="haptic_feedback_preference_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Application Information">
        <Preference
            android:key="version_Info"
            android:selectable="true"
            android:persistent="false"
            android:title="Application Version"
            android:summary="2.0.1"/>
        <Preference
            android:key="copyright"
            android:selectable="true"
            android:persistent="false"
            android:title="Cannamaster Grow Assistant"
            android:summary="Copyright Â© 2020"/>
    </PreferenceCategory>

</PreferenceScreen>