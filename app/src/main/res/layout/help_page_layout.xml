<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.cannamaster.growassistant.mmj.other_pages.HelpPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/help_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/green_A700"
                android:titleTextColor="@color/white"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <!-- start Help/Contact Page Layout -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="If you are experiencing issues with this app or cannot get a feature to work, contact us using the form below.  Be sure to include as much relevant information as possible so we can replicate your problem and provide a solution."
                    android:id="@+id/set_notifications_title"
                    android:layout_gravity="center"
                    android:padding="10dp"/>

                <RadioButton
                    android:text="I Have A Question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_question"
                    android:checked="true" />

                <RadioButton
                    android:text="I'm Getting An Error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_error" />

                <RadioButton
                    android:text="I Have A Suggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_suggestion" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:id="@+id/textView"
                    android:layout_margin="15dp"
                    android:inputType="textMultiLine"
                    android:hint="Use This Space To Explain Your Issue Or Suggestion" />

                <Button
                    android:text="Send To Developers"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/green_A700"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:id="@+id/ContactButton"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
